<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/launch_detail_rocket_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rocket"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/launch_detail_rocket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@id/launch_detail_rocket_text" />

            <TextView
                android:id="@+id/launch_detail_date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/launch_detail_rocket_text"
                android:text="@string/date"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/launch_detail_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/launch_detail_date_text"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@id/launch_detail_date_text" />

            <TextView
                android:id="@+id/launch_detail_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/launch_detail_date_text" />


        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>